[Unit]
Description=Bluetooth test suite - bluez pairing tool
After=bluetooth.service
StopWhenUnneeded=True

[Service]
Type=dbus
BusName=org.merproject.btts.BluezPairingTool
ExecStart=/usr/bin/btts bluez-pairing-tool --mode=server
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/btts/dbus/btts_bus_socket
User=btts

[Install]
RequiredBy=btts.target
